<html lang="en">

<head>
   <meta charset="UTF-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <link rel="stylesheet" href="../src/public/css/color.css">
   <title>Tu Previa</title>
</head>

<body>
   <div class="row-md-4 d-flex align-items-center justify-content-center">
      <ul class="nav justify-content-end">
         <li class="nav-item">
            <a class="nav-link text-black" href="/realtimeProducts">Formulario</a>
         </li>
         <li class="nav-item">
            <a class="nav-link text-black" href="/chat">Chat</a>
         </li>
         <li class="nav-item">
            <a class="nav-link text-black" href="/products">Productos</a>
         </li>
         <li class="nav-item">
            <a class="nav-link text-black" href="/profile">Tu perfil</a>
         </li>
      </ul>
   </div>

   <div class="container">
      <div class="row">
         <div class="user">
            <h2 class="color1">Bienvenido a tu carrito, {{user.role}}:{{user.name}} {{user.first_name}}!</h2>
         </div>
            {{#each products.payload}}
              <table class="table"></table>
            <tr>
               <td>
                  <a href="/products/{{this._id}}" class="text-decoration-none">
                     <img src="{{this.thumbnail}}" alt="{{this.title}}" class="img-fluid">
                  </a>
               </td>
               <td>
                  {{this.product.title}} - {{this.product.price}} - Cantidad: {{this.quantity}}
               </td>
               <td><button class="btn" onclick="eliminarProducto('{{product._id}}')">Eliminar</button></td>
            </tr>
            {{/each}}
         </table>
      </div>
   </div>
   </div>
</body>
<script src="../src/public/cart.js"></script>

</html>